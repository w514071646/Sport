<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--1、配置Redis-->
    <bean id="jedisPool" class="redis.clients.jedis.JedisPool">
        <constructor-arg name="host" value="10.8.162.65"></constructor-arg>
        <constructor-arg name="port" value="6379"></constructor-arg>
    </bean>
    <!--2、配置Redis对象-->
    <bean id="jedisUtil" class="com.qfedu.sport.dao.JedisUtil">
        <constructor-arg name="jedisPool" ref="jedisPool"></constructor-arg>
        <constructor-arg name="password" value="root"></constructor-arg>
    </bean>
</beans>